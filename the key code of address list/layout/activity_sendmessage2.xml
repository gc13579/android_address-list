<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/sendmessage2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="新信息"
        android:textSize="40dp" />

    <Button
        android:id="@+id/sendmessage2_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="返回" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sendmessage2_tv"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/sendmessage2_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="收件人:" />
        <TextView
            android:id="@+id/sendmessage2_et_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false" />

        <EditText
            android:id="@+id/sendmessage2_et_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:visibility="gone" />
         <EditText
            android:id="@+id/sendmessage2_et_hide2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:editable="false"
            android:visibility="gone" />
    </LinearLayout>

    <EditText
        android:id="@+id/sendmessage2_sendbody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_weight="1"
        android:ems="10"
        android:gravity="left"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/sendmessage2_sendbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送"
        android:layout_below="@id/sendmessage2_sendbody" 
        android:layout_alignParentRight="true"/>

</RelativeLayout>